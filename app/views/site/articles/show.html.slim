.main-split-container
  .left-side
    .breadcrumb-container
      ol.breadcrumb.pull-left
        li
          a
            i.fa.fa-caret-right 
            span 首页
        li
          a 频道页
        li.active 正文页
      .favorite.pull-right
        button.btn.btn-xs.btn-default
          i.fa.fa-star-o
          | 收藏    
    .article-detail-container
      .article-header
        h1= @article.title
        p.text-muted
          span= @article.created_at.strftime('%F %T')
          span 来源：#{@article.source}
          span 作者：#{@article.writer}

      .article-content
        = sanitize @article.article_body.body_html

      .article-footer
        .tags.pull-left
          i.fa.fa-tags
          - @article.tags.each do |tag|
            a href="#"= tag.name

    .more-like-this.mixed-section
      .mixed-section-nav
        h4 相关文章
      .mixed-section-inner
        .mixed-section-text
          ul.section-list.list-unstyled.clearfix.hor
            - 8.times do
              li
                a href="#" 孕妈冷空气过敏肿么破333 

