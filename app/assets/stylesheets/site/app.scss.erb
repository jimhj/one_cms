$font-family-sans-serif: "微软雅黑", "microsoft yahei", verdana, lucida, Arial, sans-serif, "黑体";
$body-bg: #f8f8f8;
// $brand-success: #5cb85c !default;
// $link-color: #454545;
$brand-success: <%= SiteConfig.actived.brand_color %>;
$link-color: <%= SiteConfig.actived.text_color %>;
$link-hover-color: $brand-success;
$pagination-active-bg: $brand-success;
$pagination-active-border: $brand-success;
$border-radius-large: 0;
$border-radius-base: 0;

@import "bootstrap-sprockets";
@import "bootstrap";
@import "bootstrap-customize";
@import "font-awesome-sprockets";
@import "font-awesome";
@import "component";
@import "welcome";
@import "articles";
@import "tags";

body {
  background-color: #f8f8f8;
  -webkit-font-smoothing: antialiased;
}

.nav-top {
  width: 100%;
  height: 70px;
  background-color: #f8f8f8;
}

.nav-top-inner {
  width: 1000px;
  margin: 0 auto;
  padding-top: 16px;

  a.brand-logo {
    display: block;
    text-decoration: none;
  }

  a.brand-logo span {
    vertical-align: bottom;
    margin-left: 20px;
    font-size: 14px;
    color: #aaa;
  }

  ul {
    margin-top: 10px;

    li {
      margin-left: 20px;
    }

    li > a {
      // font-size: 12px;
      background-color: #ddd;
      color: #838383;
      padding: 4px 10px;
      border-radius: 16px;
      text-decoration: none;

      &:hover {
        background-color: $brand-success;
        color: #fff;
      }

      i.fa {
        margin-right: 5px;
      }
    }
  }
}

.main-container {
  margin-top: 20px !important;
  width: 1000px !important;
  padding: 0;
}

.main-split-container {
  @include clearfix;
  min-height: 700px;

  .left-side {
    float: left;
    width: 680px;
  }

  .right-side {
    float: right;
    width: 300px;
  }

  // .right-side ul.section-list.recent {
  //   li {
  //     width: 270px;
  //     list-style-position: outside;
  //   }

  //   li a {
  //     width: 270px;
  //     overflow: hidden;    
  //     text-overflow: ellipsis;    
  //     white-space: nowrap;
  //   }
  // }

  .right-side .search-field {
    width: 100%;
    position: relative;
    height: 30px;
    margin-bottom: 10px;

    i.fa.fa-search, input.input-sm {
      position: absolute;
    }

    i.fa.fa-search {
      top: 8px;
      left: 8px;
      color: #cccccc;
    }

    input.input-sm {
      top: 0;
      left: 0;
      width: 100%;
      padding-left: 24px;
      padding-right: 40px;
      background-color: #fafafa;
    }

    input.btn {
      position: absolute;
      top: 0;
      right: 0;
      border-top-left-radius: 0;
      border-bottom-left-radius: 0;
    }
  }

  .right-side .mixed-section.ad-section {
    border: none;
    background-color: transparent;
    .mixed-section-inner {
      padding: 0 0;
    }
  }

  .blank-state {
    height: 300px;
    line-height: 300px;
    text-align: center;
    color: $text-muted;
  }  
}

.footer {
  margin-top: 40px;
  background-color: #4F4F4F;
  padding-top: 40px;
  padding-bottom: 40px;
  margin-bottom: 0px;
  font-size: 12px;

  &, a { color: #999; }
  a.contact-us {
    color: $brand-success;
    margin-right: 5px;
  }

  .container {
    width: 1000px !important;
    padding-left: 0px;
    padding-right: 0px;
  }

  .website {
    @include clearfix;
    padding-bottom: 20px;
    border-bottom: 1px solid #555;

    h4 {
      margin-top: 0px;
      color: #FAFAFA;
    }

    .links a {
      display: inline-block;
      margin-right: 10px; 
      margin-bottom: 10px;
    }
  }

  .copy-right {
    margin-top: 10px;
    padding-top: 10px;
  }

  .announce {
    padding-top: 10px;
    border-bottom: 1px solid #555;  
  } 
}