$body-bg: <%= (SiteConfig.actived.background_color.presence || '#f8f8f8') rescue '#f8f8f8' %>;
$brand-success: <%= SiteConfig.actived.brand_color rescue '#5cb85c !default' %>;
$link-color: <%= SiteConfig.actived.text_color rescue '#454545' %>;

$link-hover-color: $brand-success;
$pagination-active-bg: $brand-success;
$pagination-active-border: $brand-success;

@import "bootstrap-sprockets";
@import "bootstrap";
@import "font-awesome-sprockets";
@import "font-awesome";
@import "mobile/component";
@import "mobile/index";
@import "wechat-article";

body {
  background-color: $body-bg;
  -webkit-font-smoothing: antialiased;
}

// Header Logo
.header-logo {
  background-color: $brand-success;
  padding: 5px 0px;
  width: 100%;
  text-align: center;

  a.logo-brand {
    display: inline-block;
    background-repeat: no-repeat;
    width: 160px;
    height: 40px;
  }

  ul.toolbar {
    float: right;
    margin-bottom: 0px;
    padding-top: 13px;

    li {
      float: left;
      margin-right: 10px;
    }

    li > a {
      text-decoration: none;

      i.fa {
        margin-right: 5px;
      }
      color: #fff;
    }
  }
}

// Navbar
.header-nav {
  width: 100%;
  background-color: #ffffff;
}

.header-nav > ul {
  li {
    float: left;
    width: 14%;

    &:last-child {
      margin-right: 0px;
    }
  }

  li > a {
    display: block;
    text-align: center;
    padding: 10px 0px;
    text-decoration: none;
  }

  li:hover a, li.active a {
    border-bottom: 2px solid $brand-success;
  }
}

// Main Container
.main-container {
  padding: 0;
}

footer {
  margin-top: 20px;
  background-color: #4F4F4F;
  padding-top: 20px;
  padding-bottom: 20px;
  margin-bottom: 0px;
  font-size: 12px;

  .copyright {
    padding: 0px 20px;
    color: #999999;
  }  
}
